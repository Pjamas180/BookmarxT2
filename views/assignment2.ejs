	<div class ="container-fluid">
		<%
		var x = 0;
		var row = false;
		books.forEach(function(book) { %>
		<% if (x == 0) {
			row = false;
			%>
			<div class="row ">
		<% } %>
		  <div class="col-md-4">
				<div id="facebook" class="cards">
				<h1><%= book.title %></h1>
				<p class="bookmark-description">
					<%= book.description %>
				</p>
				<a style="text-decoration: none" href="<%= book.url %>" target="_blank">
					<div class="bookmark-button">
						<p>Link</p>
					</div>
				</a>
				<p class="tags"><span>Tags: </span><%= book.tags %></p>
			</div>
		</div>

		  <% x++; if(x ==3) { %>
		</div>
		   <% x = 0; row = true; } %>
		   <% }); %>
